<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <record id="simpac_view_partner_form" model="ir.ui.view">
            <field name="name">simpac.res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <field name="email" position="after">
                    <field name="interimaires" attrs="{'invisible': [('is_company','=',False)]}"/>
                </field>
            </field>
        </record>
        
         <!-- =============================================================== -->
        
        <record id="base.action_partner_form_view1" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
        </record>
        <record id="base.action_partner_form_view2" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
        </record>
        <record id="base.action_partner_tree_view1" model="ir.actions.act_window.view">
            <field name="sequence" eval="0"/>
        </record>
        
        <!-- =============================================================== -->
        
        <record id="base.action_partner_supplier_form" model="ir.actions.act_window">
            <field name="view_mode">tree,kanban,form</field>
        </record>
        
    </data>
</openerp>
