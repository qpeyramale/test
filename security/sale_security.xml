<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data noupdate="1">
    <delete model="ir.rule" search="[('name', '=', 'Personal Order Lines')]"/>
    <record id="sale_order_line_personal_rule" model="ir.rule">
        <field name="name">Personal Order Lines</field>
        <field ref="model_sale_order_line" name="model_id"/>
        <field name="domain_force">['|',('order_id.user_id','=',user.id),('order_id.user_id','=',False),('composant','=',False)]</field>
        <field name="groups" eval="[(4, ref('base.group_sale_salesman'))]"/>
    </record>
    <delete model="ir.rule" search="[('name', '=', 'All Orders Lines')]"/>
    <record id="sale_order_line_see_all" model="ir.rule">
        <field name="name">All Orders Lines</field>
        <field ref="model_sale_order_line" name="model_id"/>
        <field name="domain_force">[(1,'=',1),('composant','=',False)]</field>
        <field name="groups" eval="[(4, ref('base.group_sale_salesman_all_leads'))]"/>
    </record>
    <record id="sale_order_line_see_all_manager" model="ir.rule">
        <field name="name">All Orders Lines manager</field>
        <field ref="model_sale_order_line" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('base.group_sale_manager'))]"/>
    </record>

</data>
</openerp>
