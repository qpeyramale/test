<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="product_category_form_view" model="ir.ui.view">
            <field name="name">product.category.form.simpac</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view" />
            <field name="arch" type="xml">
                <group name="parent" position="before">
                    <group name="taux" col="4" colspan="4">
                        <field name="taux"/>
                        <field name="margin"/>
                    </group>
                    <group col="4" colspan="4">
                        <group string="Surtaxe">
                            <field name="poids_min" />
                            <field name="tarif10g_seuil1" />
                            <field name="tarif10g_seuil2" />
                        </group>
                        <group string="En nombre">
                            <label string="Tarifs jusqu'à 35g" colspan="2"/>
                            <newline/>
                            <field name="tarif35g"/>
                            <label string="Tarifs jusqu'à 250g" colspan="2"/>
                            <newline/>
                            <field name="tarif_objet" />
                            <field name="tarif_kg" />
                        </group>
                    </group>
                </group>
            </field>
        </record>
        
        <record id="product_normal_form_view" model="ir.ui.view">
            <field name="name">product.normal.form.simpac</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />
            <field name="arch" type="xml">
                <field name="list_price" position="after">
                    <field name="margin_perso"/>
                    <field name="margin" attrs="{'readonly': [('margin_perso','=',False)]}"/> %%
                </field>
                <notebook position="inside">
                    <page string="Impression">
                        <group>
                            <field name="tag_ids_fnct" invisible="1"/>
                            <field name="tag_ids"/>
                        </group>
                    </page>
                    <page string="Affranchissement">
                        <group>
                            <field name="plis_mini"/>
                            <field name="plis_maxi"/>
                            <field name="masse_mini"/>
                            <field name="masse_maxi"/>
                            <field name="delai"/>
                        </group>
                        
                    </page>
                </notebook>
            </field>
        </record>
        
        <record id="product_product_tree_view" model="ir.ui.view">
            <field name="name">product.product.tree.simpac</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view" />
            <field eval="7" name="priority"/>
            <field name="arch" type="xml">
                <field name="categ_id" position="replace"/>
                <field name="default_code" position="replace">
                    <field name="categ_id"/>
                </field>
            </field>
        </record>
        
        <!-- =============================================================== -->
        
        <record id="product.open_view_product_tree1" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
        </record>

        <record id="product.open_view_product_form1" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
        </record>

        <record id="product.open_view_product_kanban1" model="ir.actions.act_window.view">
            <field name="sequence" eval="3"/>
        </record>
        
    </data>
</openerp>
