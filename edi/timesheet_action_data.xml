<?xml version="1.0" ?>
<openerp>
    
    <!-- Mail template is done in a NOUPDATE block
         so users can freely customize/delete them -->
    <data noupdate="0">

        <!--Email template -->
        <record id="email_template_edi_deputy_timesheet" model="email.template">
            <field name="name">Deputy timesheet - Send by Email</field>
            <field name="email_from">${object.user_id.email or ''}</field>
            <field name="subject">Feuille de présence ${object.date_from or ''} au ${object.date_to or ''}</field>
            <field name="model_id" ref="model_hr_deputy_timesheet_sheet_sheet"/>
            <field name="auto_delete" eval="True"/>
            <field name="email_recipients">${ctx.get('partner_id')}</field>
            <field name="report_template" ref="simpac_timesheet"/>
            <field name="report_name">Feuille de présence</field>
            <field name="lang"></field>
            <field name="body_html"><![CDATA[<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">

    <p>Bonjour ${ctx.get('partner_name')},</p>
    
    <p>Vous trouverez en pièce-jointe la feuille de présence pour la semaine du ${object.date_from or ''} au ${object.date_to or ''}</p>
    
    

    <br/>
    <p>Pour toute question, n'hésitez pas à nous contacter.</p>
    <p>Merci!</p>
    
</div>]]></field>
        </record>
    </data>
</openerp>
