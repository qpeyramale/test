<?xml version="1.0" encoding="utf-8"?>

<!-- ********** -->

<openerp>
    <data>
        
        <menuitem id="menu_hr_deputies_general" parent="hr.menu_hr_root" name="Intérimaires" sequence="1"/>
        
        <record id="view_deputy_form" model="ir.ui.view">
            <field name="name">hr.deputy.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_timesheet.hr_timesheet_employee_extd_form" />
            <field name="arch" type="xml">
                <div name="button_box" position="replace">
                    <div class="oe_right oe_button_box" name="button_box" attrs="{'invisible': [('interimaire','=',True)]}">
                    </div>
                    <div class="oe_right oe_button_box" name="button_box2" attrs="{'invisible': [('interimaire','=',False)]}">
                    </div>
                </div>
                <label for="category_ids" position="before">
                    <label for="prenom" class="oe_edit_only"/>
                    <field name="prenom"/>
                </label>
                <notebook position="inside">
                    <page string="Informations" attrs="{'invisible': [('interimaire','=',False)]}">
                        <group>
                            <group>
                                <field name="interimaire" invisible="1"/>
                                <field name="active"/>
                                <field name="partner_id" attrs="{'required': [('interimaire','=',True)]}"/>
                            </group>
                            <group></group>
                            <group string="Personal Information">
                                <!--<field name="title"/>-->
                                <field name="num_secu"/>
                            </group>
                            <group string="Contact">
                                <field name="phone"/>
                                <field name="mobile"/>
                                <field name="phone2"/>
                            </group>
                        </group>
                         <separator string="Notes"/>
                        <field name="notes" placeholder="Other Information ..." colspan="4"/>
                    </page>
                    <page string="Présences" attrs="{'invisible': [('interimaire','=',False)]}">
                        <group>
                            <field name="timesheet_ids" nolabel="1">
                                <tree string="Présences">
                                    <field name="date"/>
                                    <field name="hour_from" widget="float_time"/>
                                    <field name="hour_to" widget="float_time"/>
                                    <field name="unit_amount" widget="float_time"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </notebook>
                <page string="Public Information" position="attributes">
                    <attribute name="attrs">{'invisible': [('interimaire','=',True)]}</attribute>
                </page>
                <page string="Personal Information" position="attributes">
                    <attribute name="attrs">{'invisible': [('interimaire','=',True)]}</attribute>
                </page>
                <page string="HR Settings" position="attributes">
                    <attribute name="attrs">{'invisible': [('interimaire','=',True)]}</attribute>
                </page>
            </field>
        </record>
        
        <record id="view_deputy_tree" model="ir.ui.view">
            <field name="name">hr.deputy.tree</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <tree string="Intérimaires">
                    <field name="name"/>
                    <field name="prenom"/>
                    <field name="phone"/>
                    <field name="mobile"/>
                    <field name="phone2"/>
                </tree>
            </field>
        </record>
        
        <record id="action_deputies" model="ir.actions.act_window">
            <field name="name">Intérimaires</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_deputy_tree"/>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_interimaire': True}</field>
            <field name="domain">[('interimaire','=',True)]</field>
        </record>
        
        <menuitem id="menu_hr_deputies" action="action_deputies" parent="menu_hr_deputies_general" sequence="1"/>
        
        <!-- ========================== intérimaires ======================== -->
        
        <record model="ir.actions.act_window" id="act_hr_deputy_timesheet_sheet_sheet_2_hr_analytic_timesheet">
            <field name="context">{'search_default_sheet_id': [active_id]}</field>
            <field name="name">Timesheet Activities</field>
            <field name="res_model">hr.deputy.analytic.timesheet</field>
            <field name="src_model">hr_deputy_timesheet_sheet.sheet</field>
        </record>
        
        <record id="hr_deputy_timesheet_sheet_tree_simplified" model="ir.ui.view">
            <field name="name">hr.deputy.timesheet.sheet.tree</field>
            <field name="model">hr_deputy_timesheet_sheet.sheet</field>
            <field eval="10" name="priority"/>
            <field name="arch" type="xml">
                <tree colors="blue:state == 'draft';black:state in ('confirm','new');gray:state == 'done'" string="Timesheets">
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
        <record id="hr_deputy_timesheet_sheet_form" model="ir.ui.view">
            <field name="name">hr.deputy.timesheet.sheet.form</field>
            <field name="model">hr_deputy_timesheet_sheet.sheet</field>
            <field name="arch" type="xml">
                <form string="Timesheet" version="7.0">
                    <header>
                        <button name="button_confirm" states="new" string="Valider" type="object" class="oe_highlight"/>
                        <button name="%(action_view_invoice_timesheet)d" string="Facturation"
                                type="action" class="oe_highlight" context="{'action': 'invoice'}" attrs="{'invisible': [('state','!=','done')]}"/>
                        <button name="%(action_view_report_timesheet)d" string="Edition"
                                type="action" class="oe_highlight" context="{'action': 'report'}"/>
                        <field name="state" widget="statusbar" statusbar_visible="new,done,invoiced"/>
                    </header>
                    <sheet>
                        <div class="oe_right oe_button_box" name="buttons">
                            <button type="action"
                                name="%(act_hr_deputy_timesheet_sheet_sheet_2_hr_analytic_timesheet)d"
                                string="Timesheet Activities" />
                        </div>

                        <group>
                            <group>
                                <label for="date_from" string="Timesheet Period"/>
                                <div><field name="date_from" class="oe_inline" attrs="{'readonly': [('state','!=','new')]}"/> to <field name="date_to" class="oe_inline" attrs="{'readonly': [('state','!=','new')]}"/></div>
                                <field name="name" invisible="1"/>
                                <field name="last_date" invisible="1"/>
                                <field name="last_hour_from" invisible="1"/>
                                <field name="last_hour_to" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Details">
                                <field name="id" invisible="1"/>
                                <field context="{'timesheet_date_from': date_from, 'timesheet_date_to': date_to, 'timesheet_id': id, 'default_interimaire': True}" 
                                name="timesheet_ids" nolabel="1"
                                attrs="{'readonly': [('state','!=','new')]}">

                                    <tree editable="top" string="Timesheet Activities">
                                        <field name="date" on_change="onchange_date(date, parent.date_from, parent.date_to, context)"/>
                                        <field name="employee_id" domain="[('interimaire','=',True),('active','=',True)]"/>
                                        <field name="hour_from" widget="float_time"/>
                                        <field name="hour_to" widget="float_time"/>
                                        <field name="unit_amount" readonly="1" widget="float_time" string="Hours" sum="Hours"/>
                                        <field name="state"/>
                                        <field invisible="1" name="user_id"/>
                                    </tree>
                                    <form string="Timesheet Activities" version="7.0">
                                        <field name="date" on_change="onchange_date(date, parent.date_from, parent.date_to, context)"/>
                                        <field name="employee_id" domain="[('interimaire','=',True),('active','=',True)]"/>
                                        <field name="hour_from" widget="float_time"/>
                                        <field name="hour_to" widget="float_time"/>
                                        <field name="unit_amount" widget="float_time" readonly="1"/>
                                        <field name="user_id" required="1" readonly="1"/>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="message_follower_ids" widget="mail_followers"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- =============================================================== -->
        
        <record id="hr_deputy_timesheet_line_search" model="ir.ui.view">
            <field name="name">hr.deputy.analytic.timesheet.search</field>
            <field name="model">hr.deputy.analytic.timesheet</field>
            <field name="arch" type="xml">
                <search string="Timesheet">
                    <field name="search_date_from" filter_domain="[('date','&gt;=',self)]"/>
                    <field name="search_date_to" filter_domain="[('date','&lt;=',self)]"/>
                    <field name="employee_id"/>
                </search>
            </field>
        </record>
        
        <record id="hr_deputy_timesheet_line_tree" model="ir.ui.view">
            <field name="name">hr.deputy.analytic.timesheet.tree</field>
            <field name="model">hr.deputy.analytic.timesheet</field>
            <field name="arch" type="xml">
                <tree editable="top" string="Timesheet Activities">                  
                    <field name="date" />
                    <field name="employee_id"/>
                    <field name="user_id" required="1" options='{"no_open": True}' invisible="1"/>
                    <field name="hour_from" widget="float_time"/>
                    <field name="hour_to" widget="float_time"/>
                    <field name="unit_amount" readonly="1" string="Duration"  sum="Total time" widget="float_time"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
        <record id="ir_actions_server_deputy_timesheet_sheet" model="ir.actions.server">
            <field name="sequence" eval="5"/>
            <field name="state">code</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_hr_deputy_timesheet_current_open"/>
            <field name="code">action = pool.get('hr.deputy.timesheet.current.open').open_timesheet(cr, uid, None, context)</field>
            <field name="condition">True</field>
            <field name="name">Feuille de présence</field>
        </record>

        <menuitem name="Feuille de présence actuelle" id="menu_deputy_current_timesheet" parent="menu_hr_deputies_general" action="ir_actions_server_deputy_timesheet_sheet" sequence="1"/>
        
        <record id="ir_actions_server_deputy_timesheet_sheet2" model="ir.actions.server">
            <field name="sequence" eval="5"/>
            <field name="state">code</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_hr_deputy_timesheet_previous"/>
            <field name="code">action = pool.get('hr.deputy.timesheet.previous').open_timesheet(cr, uid, None, context)</field>
            <field name="condition">True</field>
            <field name="name">Feuille de présence précédente</field>
        </record>

        <menuitem name="Feuille de présence précédente" id="menu_deputy_current_timesheet2" parent="menu_hr_deputies_general" action="ir_actions_server_deputy_timesheet_sheet2" sequence="2"/>
        
        <record id="act_hr_deputy_timesheet_sheet_form" model="ir.actions.act_window">
            <field name="name">Feuilles de présence</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr_deputy_timesheet_sheet.sheet</field>
            <field name="view_type">form</field>
            <field name="context">{'search_default_to_approve':1}</field>
        </record>

        <menuitem action="act_hr_deputy_timesheet_sheet_form" id="menu_act_hr_deputy_timesheet_sheet_form" parent="menu_hr_deputies_general"
             sequence="3" groups="base.group_hr_user"/>
        
        <record id="act_hr_deputy_timesheet_line_evry1_all_form" model="ir.actions.act_window">
            <field name="name">Présences</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.deputy.analytic.timesheet</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_today":1}</field>
            <field name="search_view_id" ref="hr_deputy_timesheet_line_search"/>
        </record>
        
        <record id="act_deputy_employee_2_hr_timesheet" model="ir.actions.act_window">
            <field name="res_model">hr.deputy.analytic.timesheet</field>
            <field name="view_type">form</field>
            <field name="name">Présences</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_employee_id': [active_id], 'default_employee_id': active_id}</field>
            <field name="search_view_id" ref="hr_deputy_timesheet_line_search"/>
        </record>
         
        <record id="hr_deputy_timesheet_sheet_employee_extd_form" model="ir.ui.view">
            <field name="name">hr.deputy.timesheet.sheet.employee.extd_form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_timesheet_sheet.hr_timesheet_sheet_employee_extd_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box2']" position="inside">
                    <button name="%(act_deputy_employee_2_hr_timesheet)d" string="Timesheets" type="action" groups="base.group_hr_manager"/>
                </xpath>
            </field>
        </record>

        <menuitem id="menu_hr_deputy_working_hours" parent="menu_hr_deputies_general" action="act_hr_deputy_timesheet_line_evry1_all_form"/>
        
        <record model="ir.values" id="hr_deputy_timesheet_make_invoice">
            <field name="model_id" ref="model_hr_deputy_analytic_timesheet" />
            <field name="name">Générer les factures</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_timesheet_make_invoice'))" />
            <field name="key">action</field>
            <field name="model">hr.deputy.analytic.timesheet</field>
        </record>
        
    </data>
</openerp>
